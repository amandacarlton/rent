extends layout

block content
  h1= title
  p Welcome to #{title}
      form(action="/", method="post")
       label(for="address") Address
       input(type="text" id="address" name="address")
       p
       select.pay(id="pay" name="pay")
            option(value="") Payment
            option(value="rent") Rent
            option(value="price") Buy
            
       p
       select.type(id="type" name="type")
            option(value="") Rating
            option(value="apartment_condo") Apartment/Condo
            option(value="town_house") Town House
            option(value="single_family_house") Single Family Home
       p
       select.room(id="room" name="room")
           option(value="") Rooms
           option(value="0") 0
           option(value="1") 1
           option(value="2") 2
           option(value="3") 3
           option(value="4") 4
           option(value="5") 5
       p
       select.bath(id="bath" name="bath")
           option(value="") Baths
           option(value="1") 1
           option(value="1.5") 1.5
           option(value="2") 2
           option(value="2.5") 2.5
           option(value="3") 3
           option(value="3.5") 3.5
       p
       label(for="feet") Sq Feet
       input(type="number" id="feet" name="feet")  
       p
       input(type="submit" value="submit")
